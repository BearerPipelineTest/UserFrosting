{
    "name": "userfrosting/userfrosting",
    "type": "project",
    "description": "A secure, modern user management system for PHP.",
    "keywords": ["php user management", "usercake", "bootstrap"],
    "homepage": "https://github.com/userfrosting/UserFrosting",
    "license" : "MIT",
    "authors" : [
        {
            "name": "Alexander Weissman",
            "homepage": "https://alexanderweissman.com"
        },
        {
            "name": "Louis Charette",
            "homepage": "https://bbqsoftwares.com"
        },
        {
            "name": "Jordan Mele",
            "email": "SiliconSoldier@outlook.com.au",
            "homepage": "https://djmm.me"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../sprinkle-core"
        },
        {
            "type": "path",
            "url": "../sprinkle-admin"
        },
        {
            "type": "path",
            "url": "../sprinkle-account"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-gd": "*",
        "userfrosting/framework": "dev-develop-5.0",
        "userfrosting/sprinkle-core": "*",
        "userfrosting/sprinkle-admin": "*",
        "userfrosting/sprinkle-account": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.13",
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.2",
        "league/factory-muffin": "^3.0",
        "league/factory-muffin-faker": "^2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "UserFrosting\\App\\": "app/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UserFrosting\\Tests\\App\\": "app/tests/"
        }
    },
    "scripts": {
        "test" : "phpunit --colors=always"
    }
}
